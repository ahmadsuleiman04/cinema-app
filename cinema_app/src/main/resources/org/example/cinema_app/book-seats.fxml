<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.cinema_app.BookSeats"
      prefHeight="700.0" prefWidth="600.0" stylesheets="@Style.css" alignment="TOP_CENTER">
    <padding >
        <Insets right="10" left="10" bottom="10"/>
    </padding>
    <StackPane alignment="BOTTOM_CENTER" >
        <Rectangle width="600" height="120" id="toprect"/>
        <Label text="interstellar" />
    </StackPane>

    <StackPane>
        <ImageView fx:id="screenBackGround" fitHeight="480" fitWidth="600"/>
            <GridPane prefWidth="600" prefHeight="480" hgap="100" vgap="20" alignment="TOP_CENTER">
                <Button GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="seat1" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="2" GridPane.columnIndex="0" fx:id="seat2" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="seat3" prefHeight="40"  prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="4" GridPane.columnIndex="0" fx:id="seat4" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="5" GridPane.columnIndex="0" fx:id="seat5" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="6" GridPane.columnIndex="0" fx:id="seat6" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="1" GridPane.columnIndex="3" fx:id="seat7" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="2" GridPane.columnIndex="3" fx:id="seat8" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="3" GridPane.columnIndex="3" fx:id="seat9" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="4" GridPane.columnIndex="3" fx:id="seat10" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="5" GridPane.columnIndex="3" fx:id="seat11" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
                <Button GridPane.rowIndex="6" GridPane.columnIndex="3" fx:id="seat12" prefHeight="40" prefWidth="50" onAction="#selectSeats"/>
            </GridPane>
    </StackPane>
    <HBox alignment="CENTER" spacing="20">
        <Button text="cancel" prefWidth="200" prefHeight="40"  onAction="#switchToMovieDetails"/>
        <Button text="book seats" prefWidth="200" prefHeight="40" onAction="#bookSeats"/>
    </HBox>
</VBox>

